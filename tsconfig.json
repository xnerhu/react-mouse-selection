{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "esModuleInterop": true,
    "declaration": true,

    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,

    "sourceRoot": "./src",

    "baseUrl": "./",

    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
